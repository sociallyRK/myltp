
<%= form_for @financialinstrument do |f| %>

  <%= f.label :instrument_type%>
  <%= f.select :instrument_type, [['asset', "asset"], ['liability', "liability"], ['income', "income"],['expenses', "expenses"]] %>
  <br>


<div id="myStuff" style="display:none;">
  <%= f.label :instrument_sub %>
  <%= f.select :instrument_sub, [["savings account", "savings account"], ["checking account", "checking account"], ['taxable investment account', "taxable investment account"], ["IRA Account", "IRA Account"], ["student loan", "student loan"], ["car loan", "car loan"], ['home loan', "home loan"], ["personal loan", "line of credit"], ["salary", "salary"], ["business", "business"], ["contract for hire", "contract for hire"], ["gift", "gift"], ["pension", "pension"],["expense"],["expense"]] %>
  <br>
</div>
  <%= f.label :amount %>
  <%= f.text_field :amount %>
  <br>
  <p>
  <%= f.submit  class: "btn btn-primary" %>
<% end %>


